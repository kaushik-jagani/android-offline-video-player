<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/grid_1">

    <!-- Video thumbnail -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/video_thumbnail_width"
        android:layout_height="@dimen/video_thumbnail_height"
        app:cardCornerRadius="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/video_thumbnail"
            android:scaleType="centerCrop"
            tools:background="@color/colorSurfaceVariant" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Video info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/grid_2"
        android:paddingEnd="@dimen/grid_1">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/text_title"
            tools:text="Big Buck Bunny.mp4" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textSize="@dimen/text_caption"
            tools:text="01:32:45" />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textSize="@dimen/text_caption"
            tools:text="1.4 GB" />

    </LinearLayout>

</LinearLayout>
