<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Storage permissions for scanning local videos -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- Required for saving screenshots on API 24-28 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".VideoPlayerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OfflineVideoPlayer"
        tools:targetApi="35">

        <!-- Main Activity – Folder / Video List browsing -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OfflineVideoPlayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Video List Activity – Shows videos inside a folder -->
        <activity
            android:name=".ui.video_list.VideoListActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.OfflineVideoPlayer" />

        <!-- Player Activity – Fullscreen video playback -->
        <activity
            android:name=".ui.player.PlayerActivity"
            android:configChanges="orientation|screenSize|screenLayout|smallestScreenSize|keyboardHidden"
            android:exported="false"
            android:parentActivityName=".ui.video_list.VideoListActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.OfflineVideoPlayer.Player" />

    </application>

</manifest>
